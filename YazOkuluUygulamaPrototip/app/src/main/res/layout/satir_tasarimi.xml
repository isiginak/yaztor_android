<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#fffff0"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/uni_adi1"
           android:layout_width="0dp"
           android:layout_height="25dp"
           android:layout_weight="0.2"
           android:background="#fffff0"
           android:gravity="center"
           android:text="Üniversite Adı:"
           android:textColor="#000"
           android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
           android:textSize="10sp" />
       <TextView
           android:id="@+id/uni_adi"
           android:layout_width="0dp"
           android:background="#fffff0"
           android:textColor="#000"
           android:gravity="center"
           android:textSize="10sp"

           android:layout_height="25dp"
           android:layout_weight="0.7"/>

   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fakulteAdi1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.2"
            android:background="#88d3ea"
            android:gravity="center"
            android:text="Fakülte Adı:"
            android:textColor="#000"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/fakulteAdi"
            android:layout_width="0dp"
            android:background="#88d3ea"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="10sp"

            android:layout_height="25dp"
            android:layout_weight="0.7"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bolum1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.2"
            android:background="#fffff0"
            android:gravity="center"
            android:text="Bölüm:"
            android:textColor="#000"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/bolum"
            android:layout_width="0dp"
            android:background="#fffff0"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="10sp"

            android:layout_height="25dp"
            android:layout_weight="0.7"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dersKodu1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.2"
            android:background="#88d3ea"
            android:gravity="center"
            android:text="Ders Kodu:"
            android:textColor="#000"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/dersKodu"
            android:layout_width="0dp"
            android:background="#88d3ea"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="10sp"

            android:layout_height="25dp"
            android:layout_weight="0.7"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dersAdi1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.2"
            android:background="#fffff0"
            android:gravity="center"
            android:text="Ders Adı:"
            android:textColor="#000"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/dersAdi"
            android:layout_width="0dp"
            android:background="#fffff0"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="10sp"

            android:layout_height="25dp"
            android:layout_weight="0.7"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/kredi1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.2"
            android:background="#88d3ea"
            android:gravity="center"
            android:text="Ders Kredisi:"
            android:textColor="#000"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/kredi"
            android:layout_width="0dp"
            android:background="#88d3ea"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="10sp"

            android:layout_height="25dp"
            android:layout_weight="0.7"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/akts1"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.2"
            android:background="#fffff0"
            android:gravity="center"
            android:text="AKTS:"
            android:textColor="#000"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/akts"
            android:layout_width="0dp"
            android:background="#fffff0"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="10sp"

            android:layout_height="25dp"
            android:layout_weight="0.7"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffff0"
        android:orientation="horizontal">
        <Button
            android:id="@+id/uni_click"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.5"
            android:background="@drawable/edit_text_tasarim"
            android:gravity="center"
            android:text="Ders İçeriği"
            android:textColor="#fff"


            android:textSize="10sp" />
        <Button
           android:id="@+id/yorum_click"
            android:layout_width="0dp"
            android:background="@drawable/edit_text_tasarim"
            android:textColor="#fff"
            android:gravity="center"

            android:textSize="10sp"
            android:text="Yorum Yap"
            android:layout_height="25dp"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="1dp"
                android:background="#8B4513"></View>
        </LinearLayout>

</LinearLayout>