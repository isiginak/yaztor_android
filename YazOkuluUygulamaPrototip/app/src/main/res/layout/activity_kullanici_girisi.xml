<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffff0"
    tools:context="com.example.android.yazokuluuygulamaprototip.KullaniciGirisi">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:background="@drawable/logo" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/logo"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="48dp"
                android:ems="10"

                android:hint="emailinizi giriniz..."
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/sifre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_centerHorizontal="true"

                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                android:ems="10"
                android:hint="şifrenizi giriniz..."
                android:inputType="textPersonName"
                android:password="true" />

            <Button
                android:textColor="#fff"
                android:id="@+id/goster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sifre"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/edit_text_tasarim"
                android:text="Giriş Yap" />


            <TextView
                android:id="@+id/kayit_ol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/goster"
                android:layout_marginTop="15dp"
                android:text="Kayıt Ol!"

                android:textAlignment="center"
                android:textColor="#1487e6" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kayit_ol"
                android:layout_margin="20dp"

                android:background="@drawable/edit_text_tasarim" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
